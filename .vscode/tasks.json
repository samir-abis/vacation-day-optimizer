{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bun: dev",
      "type": "shell",
      "command": "bun run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "nextjs-watch",
        "pattern": {
          "regexp": "^\\s*(?:Starting the development server|Compiling|Compiled|Ready|Event|Waiting|Warn|Error)\\s*(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "(?:starting server...|Compiling...|Starting...)",
          "endsPattern": "(?:Compiled successfully|Ready on|event - compiled client and server successfully|âœ“ Ready in \\d+ms)"
        }
      }
    }
  ]
}
